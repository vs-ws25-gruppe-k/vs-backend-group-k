# Example environment variables for the application backend
# Adjust these values as needed

SERVICE_DOMAIN=api.todoapp.local
SERVICE_NAME=todo-backend

# Application configuration
PORT=8080
# current options: dev, prod
SPRING_PROFILES_ACTIVE=prod
ALLOWED_ORIGIN=*

# Database configuration
POSTGRES_USER=todouser
POSTGRES_PASSWORD=secret
POSTGRES_DB=tododb
POSTGRES_HOST=${SERVICE_NAME}-postgres
POSTGRES_PORT=5432
DATABASE_URL=jdbc:postgresql://${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# JPA Configuration (options: none, validate, update, create-drop)
JPA_HIBERNATE_DDL_AUTO=update

# Spring security configuration
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=secret
